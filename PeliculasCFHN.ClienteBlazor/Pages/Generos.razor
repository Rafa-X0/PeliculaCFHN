
@page "/generos"
@using Models
@using Services
@inject IGeneroService GeneroService

<MudText Typo="Typo.h3">Generos</MudText>

<MudGrid>
    @foreach (var item in generos)
    {
        <MudItem xs="3" sm="3" md="3" lg="2">
            <MudCard Class="align-center">
                <MudCardActions >
                    <MudButton Class="text-center"  Link="@($"/pelxgenero/{item.Id}")" Variant="Variant.Outlined" Color="Color.Tertiary">@item.Nombre</MudButton>
                </MudCardActions>
                 
            </MudCard>
        </MudItem>
    }
</MudGrid>

@code {
    IEnumerable<Genero> generos = new List<Genero>();
    protected override async Task OnInitializedAsync()
    {
        generos = await GeneroService.GetAll();
    }
}
