@inherits LayoutComponentBase

<MudThemeProvider />

<MudLayout>
    <MudAppBar Elevation="1" class="indigo">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Peliculas CFHN</MudText>
        <MudSpacer />
</MudAppBar>

    <MudDrawer Class="pa-4 indigo lighten-3 shades-text text-white" @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
       <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent Class="pa-16">
       <MudContainer Class="pa-6">
          @Body
       </MudContainer>
       
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
